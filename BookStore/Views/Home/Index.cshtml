@using BookStore.Models
@using BookStore.Helpers
@model IEnumerable<Book>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr class="header">
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
        </tr>
        @foreach (var b in Model)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
            </tr>
        }
    </table>
</div>

@Html.Partial("Partial", new string[] { "Russia", "USA", "Canada", "France" })

<h3>Города</h3>
@MyHelpers.HtmlList(new string[] { "Лондон", "Париж", "Москва" })
<br />
<h3>Страны</h3>
@ListHelper.CreateList(Html, new string[] { "Великобритания", "Франция", "Россия" }, new { @class="btn", id="countriesList" })

@Html.Image("/Content/cat.jpg", "Спящий котэ")

@section Footer {
    Все права защищены. Syte Corp. 2018
}
